# Backend .env example

# Required
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
JWT_SECRET=replace-with-strong-secret

# Optional
PORT=4000
# For same-origin deployments you can omit CORS_ORIGIN.
# Set CORS_ORIGIN only for cross-origin dev/deploy (e.g., frontend at http://localhost:3000)
# You can set multiple origins by comma separating them.
# CORS_ORIGIN=http://localhost:3000
SOCKET_PATH=/socket.io
NODE_ENV=development
