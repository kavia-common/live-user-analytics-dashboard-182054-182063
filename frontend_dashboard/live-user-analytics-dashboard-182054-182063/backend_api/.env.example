# Backend API Environment Variables
# Copy this file to .env and fill in the values

# MongoDB connection (Replica Set or Atlas required for change streams)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# CORS origins (comma-separated). Include your frontend origin(s).
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.vercel.app

# Socket.io path (keep consistent with frontend)
SOCKET_PATH=/socket.io

# Port and Node environment
PORT=4000
NODE_ENV=development

# Clerk secret key (backend) - get this from Clerk dashboard
# Required for authentication via Clerk
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Admin emails (comma-separated) - users with these emails get admin role
# Required to grant admin access
ADMIN_EMAILS=admin@example.com,admin2@example.com

# Optional: Legacy local JWT auth toggle (dev/testing only)
# Set to true only if you want to enable local JWT authentication endpoints
LOCAL_JWT_AUTH=false

# JWT_SECRET is only required if LOCAL_JWT_AUTH=true
# Used for signing local JWT tokens (not Clerk tokens)
JWT_SECRET=your-local-jwt-secret-only-if-local-auth-enabled
