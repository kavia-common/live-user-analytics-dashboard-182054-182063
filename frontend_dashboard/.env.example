# Frontend Dashboard Environment Variables
# Copy this file to .env and fill in the values

# Clerk publishable key (frontend) - get this from Clerk dashboard
# Required for user authentication and sign-in UI
REACT_APP_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Admin emails (comma-separated) - used for client-side role inference
# Should match the ADMIN_EMAILS on the backend
REACT_APP_ADMIN_EMAILS=admin@example.com,admin2@example.com

# API base URL - the backend API endpoint
# In development, can be left empty to use CRA proxy (http://localhost:4000)
# In production, set to your deployed backend URL
REACT_APP_API_URL=

# Socket.io URL - the backend WebSocket endpoint
# In development, can be same as API_URL or use CRA proxy
# In production, set to your deployed backend URL
REACT_APP_SOCKET_URL=

# Socket.io path - must match backend SOCKET_PATH
REACT_APP_SOCKET_PATH=/socket.io

# The following variables support orchestrator composite naming:
# Alternative composite variable names (used by orchestrator):
# REACT_APP_frontend_dashboard.REACT_APP_API_URL=http://localhost:4000
# REACT_APP_frontend_dashboard.REACT_APP_SOCKET_URL=http://localhost:4000
# REACT_APP_frontend_dashboard.REACT_APP_SOCKET_PATH=/socket.io
