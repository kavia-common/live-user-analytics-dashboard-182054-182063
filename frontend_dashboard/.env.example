# Frontend Dashboard (.env.example)
# Copy this file to .env and set only the variables you need.
# CRA exposes variables prefixed with REACT_APP_ to the client.

# Clerk frontend publishable key for authentication (required if using Clerk)
REACT_APP_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# API base override (optional). Default is same-origin: ''.
# Examples:
# REACT_APP_API_URL=https://api.myapp.com
# REACT_APP_API_URL=https://api.myapp.com/api
REACT_APP_API_URL=

# Socket.IO connection override (optional). Defaults to same-origin with /socket.io path.
# REACT_APP_SOCKET_URL example: https://api.myapp.com
REACT_APP_SOCKET_URL=

# Socket.IO path. Default is /socket.io
REACT_APP_SOCKET_PATH=/socket.io

# Admin email list for UI gating (optional)
REACT_APP_ADMIN_EMAILS=admin@example.com,owner@example.com
