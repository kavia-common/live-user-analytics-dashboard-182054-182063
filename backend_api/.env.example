# MongoDB connection string (Atlas / Replica set)
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.example.mongodb.net/analytics?retryWrites=true&w=majority

# JWT secret for signing tokens
JWT_SECRET=replace-with-strong-secret

# Server port
PORT=4000

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Socket.io path
SOCKET_PATH=/socket.io

# Node environment
NODE_ENV=development
